<div class="card">
    <div class="card-body">
        <h3>{{title}}</h3>
        <h4>${{price}}</h4>
        <img src="{{thumbnail}}" alt="{{title}}" class="w-50"/>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
        <a href="/products/delete/{{id}}" class="btn btn-danger">Eliminar</a>
        <a href="/products/edit/{{id}}" class="btn btn-secondary">Editar</a>
    </div>
</div>